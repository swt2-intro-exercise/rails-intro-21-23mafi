<h1>Listing Authors</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th></th>
  </tr>
 
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Details page', author_path(author) %></td>
      <td><%= link_to 'Update page', edit_author_path(author) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New author', new_author_path %>